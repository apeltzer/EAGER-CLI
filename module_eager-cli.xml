<?xml version="1.0" encoding="UTF-8"?>
<project name="module_eager-cli" default="compile.module.eager-cli">
  <dirname property="module.eager-cli.basedir" file="${ant.file.module_eager-cli}"/>
  
  <property name="module.jdk.home.eager-cli" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.eager-cli" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.eager-cli" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.eager-cli" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="eager-cli.output.dir" value="${module.eager-cli.basedir}/out/production/EAGER-CLI"/>
  <property name="eager-cli.testoutput.dir" value="${module.eager-cli.basedir}/out/test/EAGER-CLI"/>
  
  <path id="eager-cli.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="eager-cli.module.production.classpath">
    <path refid="${module.jdk.classpath.eager-cli}"/>
    <path refid="library.libraries.classpath"/>
  </path>
  
  <path id="eager-cli.runtime.production.module.classpath">
    <pathelement location="${eager-cli.output.dir}"/>
    <path refid="library.libraries.classpath"/>
  </path>
  
  <path id="eager-cli.module.classpath">
    <path refid="${module.jdk.classpath.eager-cli}"/>
    <pathelement location="${eager-cli.output.dir}"/>
    <path refid="library.libraries.classpath"/>
  </path>
  
  <path id="eager-cli.runtime.module.classpath">
    <pathelement location="${eager-cli.testoutput.dir}"/>
    <pathelement location="${eager-cli.output.dir}"/>
    <path refid="library.libraries.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.eager-cli">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.eager-cli">
    <patternset refid="excluded.from.module.eager-cli"/>
  </patternset>
  
  <path id="eager-cli.module.sourcepath">
    <dirset dir="${module.eager-cli.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.eager-cli" depends="compile.module.eager-cli.production,compile.module.eager-cli.tests" description="Compile module EAGER-CLI"/>
  
  <target name="compile.module.eager-cli.production" depends="register.custom.compilers" description="Compile module EAGER-CLI; production classes">
    <mkdir dir="${eager-cli.output.dir}"/>
    <javac2 destdir="${eager-cli.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.eager-cli}/javac">
      <compilerarg line="${compiler.args.eager-cli}"/>
      <bootclasspath refid="eager-cli.module.bootclasspath"/>
      <classpath refid="eager-cli.module.production.classpath"/>
      <src refid="eager-cli.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.eager-cli"/>
    </javac2>
    
    <copy todir="${eager-cli.output.dir}">
      <fileset dir="${module.eager-cli.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.eager-cli.tests" depends="register.custom.compilers,compile.module.eager-cli.production" description="compile module EAGER-CLI; test classes" unless="skip.tests"/>
  
  <target name="clean.module.eager-cli" description="cleanup module">
    <delete dir="${eager-cli.output.dir}"/>
    <delete dir="${eager-cli.testoutput.dir}"/>
  </target>
</project>